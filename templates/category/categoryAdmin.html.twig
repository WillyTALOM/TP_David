{% extends 'baseAdmin.html.twig' %}

{% block title %}catégories{% endblock %}

{% block body %}

<h1 class="pb-5">Liste des catégories</h1>

<table>
    <thead>
        <tr>
            <th>N°</th>
            <th>Nom</th>
            <th>Produits</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories|reverse %}
            <tr>
                <td>{{ loop.revindex }}</td>
                <td><a href={#"{{ lien produits de caque category"#} class="btn btn-success">Voir les produits</a>Voir les produits</td>
                <td>{{category.name}}</td>
                <td>
                    {#<a href="{{ path('product_update', {'id': product.id}) }}"><i class="bi bi-pencil-square text-primary"></i></a>
                        <a href="{{ path('product_delete', {'id': product.id}) }}"><i class="bi bi-trash3 text-danger"></i></a>#}"
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>


<div class="text-end mt-4">
    <a href="{{ path('create_category') }}" class="btn btn-success">Ajouter une catégorie</a>
</div>

{% endblock %}
